<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_parent_layout"
    android:padding="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:id="@+id/ll_item">

        <LinearLayout
            android:id="@+id/ll_tel"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/linear_child_layout"
            android:layout_margin="3dp"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_bjlbmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盗窃盗窃"
                android:textColor="#000000"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tv_bjdh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13911111111"
                android:textSize="10sp"
                android:textColor="#000000"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="3.3"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:background="@drawable/linear_child_layout">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报警时间："
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_bjsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016年5月14日 上午9点30分53秒"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#77000000"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="警情描述："
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_bjnr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="省公安厅门口附近车辆被盗，打电话联系民警，还没有反馈。"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#77000000"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="警情地址："
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="#000000"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_sfdz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="雄楚大道181号，迪雅花园对面。"
                    android:textSize="10sp"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:background="#00ffffff">
            <TextView
                android:id="@+id/tv_ajzt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出警"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:padding="3dp"
                android:background="#ff444444"/>
        </RelativeLayout>



</LinearLayout>


